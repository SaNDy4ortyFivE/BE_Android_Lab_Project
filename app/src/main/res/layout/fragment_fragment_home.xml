<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentHome">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_global"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondry"
        android:elevation="2dp"
        android:translationZ="2dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="General Feed"
            android:textSize="22dp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@android:color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.appcompat.widget.Toolbar>


    <!-- TODO: Update blank fragment layout -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/global_Requests"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_below="@+id/toolbar_global"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/textEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Global request will be displayed here "
        android:textColor="@color/layouthint"
        android:textSize="16dp"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="220dp" />



</RelativeLayout>
